@model FoodStore.DTOs.AdminDinerDTO.AddDinnerDTO

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>AddDish</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f4f9;
            color: #333;
            margin: 0;
            padding: 20px;
        }

        h4 {
            text-align: center;
            color: #34495e;
            font-size: 28px;
            margin-bottom: 20px;
            font-weight: bold;
            letter-spacing: 1px;
        }

        hr {
            border: none;
            height: 3px;
            background-color: #2980b9;
            margin-bottom: 30px;
        }

        .row {
            display: flex;
            justify-content: center;
        }

        .col-md-4 {
            background-color: #ffffff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            max-width: 450px;
            width: 100%;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .control-label {
            font-weight: bold;
            color: #2c3e50;
            margin-bottom: 5px;
            display: block;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            font-size: 14px;
            border: 2px solid #bdc3c7;
            border-radius: 5px;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

            .form-control:focus {
                border-color: #2980b9;
                outline: none;
                box-shadow: 0 0 8px rgba(41, 128, 185, 0.5);
            }

        .text-danger {
            color: #e74c3c;
            font-size: 12px;
        }

        .btn-primary {
            background-color: #2980b9;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease, box-shadow 0.3s ease;
            width: 100%;
            text-transform: uppercase;
        }

            .btn-primary:hover {
                background-color: #21618c;
                box-shadow: 0 0 10px rgba(33, 97, 140, 0.8);
            }

            .btn-primary:focus {
                outline: none;
                box-shadow: 0 0 8px rgba(41, 128, 185, 0.5);
            }

        a {
            display: inline-block;
            margin-top: 20px;
            text-decoration: none;
            color: #2980b9;
            font-weight: bold;
            transition: color 0.3s ease;
        }

            a:hover {
                color: #21618c;
            }

            a:focus {
                outline: none;
            }

    </style>
</head>
<body>

    <h4>Add New Dish</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="AddDish" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="DishName" class="control-label"></label>
                    <input asp-for="DishName" class="form-control" />
                    <span asp-validation-for="DishName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IMAGE" class="control-label"></label>
                    <div class="custom-file">
                        <label class="custom-file-label" for="customfile">Choose File</label>
                        <input asp-for="IMAGE" class="custom-file-input" id="customfile" />                 
                    </div>
                    <span asp-validation-for="IMAGE" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
