@model IEnumerable<FoodStore.DTOs.AdminBreakFastDTO.GetBreakfastDishDTO>


@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetDish</title>
    <style>
        /* Global Styles */
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5; /* light gray background color */
        }

        .container {
            max-width: 80%;
            margin: 40px auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: #fff; /* white background color for container */
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        .table th, .table td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }

        .table th {
            background-color: #f0f0f0;
        }

        /* Button Styles */
        .btn {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-create {
            background-color: #4CAF50; /* green */
            color: #fff;
        }

        .btn-create:hover {
            background-color: #3e8e41;
        }

        .btn-edit {
            background-color: #2196F3; /* blue */
            color: #fff;
        }

        .btn-edit:hover {
            background-color: #1a73e8;
        }

        .btn-delete {
            background-color: #FF9800; /* orange */
            color: #fff;
        }

        .btn-delete:hover {
            background-color: #ff7f00;
        }

        
    </style>
</head>
<body>
    <div class="container">
        <h1>GetDish</h1>
        <p>
            <a asp-action="Create" class="btn btn-create">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DishName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DishImage)
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DishName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.DishImage))
                            {
                                <img src="@Url.Content(item.DishImage)" alt="Dish Image" style="width: 100px; height: auto;" />
                            }
                            else
                            {
                                <img src="@Url.Content("~/Image/default.jpg")" alt="Default Image" style="width: auto; height: 200px;" />
                            }
                        </td>
                        <td>
                            @Html.ActionLink("Update Dish", "UpdateBreakfast", new { id = item.ID }, new { @class = "btn btn-edit" }) |
                            
                            @Html.ActionLink("Delete Dish", "DeleteBreakFast", new { id = item.ID }, new { @class = "btn btn-delete" })
                        </td>
                    </tr>

                    
                }
            </tbody>
        </table>
        <div>
            <a asp-action="AdminIndex" asp-controller="Admin" style="background-color: #007bff; color: #ffffff; padding: 10px 20px; border: none; border-radius: 5px; cursor: pointer;" class="btn btn-default">Back</a>
        </div>
    </div>
</body>
</html>