<body>
    <header>

        <div class="container-xxl position-relative p-0">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-4 px-lg-5 py-3 py-lg-0 w-100">
                <a href="" class="navbar-brand p-0">
                    <h1 class="text-primary m-0"><i class="fa fa-utensils me-3"></i>Restoran</h1>
                    @* <img src="~/img/logo.png" alt="Logo"> *@
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="fa fa-bars"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav ms-auto py-0 pe-4">
                        <a href="@Url.Action("Index","Home")" class="nav-item nav-link active">Home</a>
                        <a href="@Url.Action("About","Home")" class="nav-item nav-link">About</a>
                        <a href="@Url.Action("Services","Home")" class="nav-item nav-link">Service</a>
                        <a href="@Url.Action("Menu","Menu")" class="nav-item nav-link">Menu</a>
                        <a href="@Url.Action("Contact","Home")" class="nav-item nav-link">Contact Us</a>
                        @if(@access.HttpContext.Session.GetString("UserSession") == null)
                        {
                        <a href="@Url.Action("Login","Account")" class="nav-item nav-link">Login</a>
                        }
                        else
                        {
                            <form asp-action="LogOut" asp-controller="Account" method="post" >
                                <button type="submit" class="nav-item nav-link" style="background:none; border:none; color:inherit; cursor:pointer;">
                                    Logout
                                </button>
                            </form>
                        }
                    </div>
                    @if (access.HttpContext.Session.GetString("UserSession") != null)
                    {
                        var data = access.HttpContext.Session.GetString("UserSession");
                        var cartCount = access.HttpContext.Session.GetInt32("CartCount") ?? 0;

                        ViewBag.username = data;
                        var username = ViewBag.username as string;
                        var maxLength = 5; // Set your desired maximum length here
                        var displayUsername = username?.Length > maxLength ? username.Substring(0, maxLength) + "..." : username;
                        <a href="@Url.Action("Cart", "Cart")" class="btn btn-outline-light">
                            <i class="fa fa-shopping-cart"></i>
                            <span id="cart-count">@cartCount</span>
                        </a>
                        <i class="fas fa-user-circle nav-item nav-link"></i>
                        <h5 style="color:white"> @displayUsername </h5>
                    }


                    <a href="#BookTable" class="btn btn-primary py-2 px-4 ms-2" onclick="scrollToSection()">Book A Table</a>

                </div>
            </nav>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer Start -->
    <div class="container-fluid bg-dark text-light footer pt-5 mt-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container py-5">
            <div class="row g-5">
