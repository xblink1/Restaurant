@model FoodStore.DTOs.AdminLunchDTO.GetLunchDTO

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete Lunch</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f7f7f7;
            color: #333;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        h3 {
            color: #e74c3c;
            font-size: 28px;
            text-align: center;
            margin-bottom: 20px;
        }

        h4 {
            font-size: 22px;
            color: #444;
            text-align: center;
            margin-bottom: 15px;
        }

        .container {
            background-color: #fff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            width: 100%;
        }

        .row {
            margin-bottom: 15px;
        }

        .col-sm-2 {
            font-weight: bold;
            color: #555;
        }

        .col-sm-10 {
            color: #777;
        }

        dl {
            margin-bottom: 0;
        }

        hr {
            border: 0;
            height: 1px;
            background-color: #ddd;
            margin: 20px 0;
        }

        .btn-danger {
            background-color: #e74c3c;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            font-weight: bold;
            transition: background-color 0.3s ease;
            margin-right: 10px;
        }

            .btn-danger:hover {
                background-color: #c0392b;
            }

            .btn-danger:active {
                background-color: #a93226;
            }

        a {
            color: #3498db;
            text-decoration: none;
            font-weight: bold;
            font-size: 16px;
            transition: color 0.3s ease;
        }

            a:hover {
                color: #2980b9;
                text-decoration: underline;
            }

        form {
            text-align: center;
            margin-top: 20px;
        }
    </style>
</head>
<body>

    <div class="container">
        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Lunch Dish Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ID)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ID)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DishName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DishName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DishImage)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DishImage)
                </dd>
            </dl>

            <form asp-action="DeleteLunch">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>

</body>
</html>
