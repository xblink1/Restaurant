@model IEnumerable<FoodStore.DTOs.AdminLunchDTO.GetLunchDTO>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetLunchDish</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f7f6;
            margin: 0;
            padding: 20px;
        }

        h1 {
            color: #333;
            text-align: center;
            margin-bottom: 30px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

            .table th, .table td {
                padding: 15px;
                text-align: left;
                border-bottom: 1px solid #ddd;
            }

            .table th {
                background-color: #4CAF50;
                color: white;
            }

            .table tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            .table tr:hover {
                background-color: #ddd;
                cursor: pointer;
            }

            .table td:last-child {
                text-align: center;
            }

            .table a {
                text-decoration: none;
                color: #4CAF50;
                font-weight: bold;
                margin: 0 5px;
            }

                .table a:hover {
                    text-decoration: underline;
                }

        .create-new-btn {
            display: inline-block;
            margin-bottom: 20px;
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .create-new-btn:hover {
                background-color: #45a049;
            }
    </style>
</head>
<body>
    <h1>Lunch Dishes</h1>
    <p>
        <a class="create-new-btn" asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DishName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DishImage)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DishName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <img src="@item.DishImage" alt="Dish Image" style="width:100px;height:auto;border-radius:5px;" />
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "UpdateLunch", new { id = item.ID }) |
                        
                        @Html.ActionLink("Delete", "DeleteLunch", new { id = item.ID })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
